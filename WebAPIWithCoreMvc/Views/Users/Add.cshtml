@model WebAPIWithCoreMvc.ViewModels.UserAddViewModel
@{
	ViewData["Title"] = "Add";
}

<h1>Kullanıcı Ekle</h1>
<div class="row">
	<div class="col-md-4">
		<form asp-action="Add" method="post">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<div class="form-group">
				<label asp-for="UserName">Kullanıcı Adı:</label>
				<input asp-for="UserName" class="from-control" />
				<span asp-validation-for="UserName" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="FirstName">Adı:</label>
				<input asp-for="FirstName" class="from-control" />
				<span asp-validation-for="FirstName" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="LastName">Soyadı:</label>
				<input asp-for="LastName" class="from-control" />
				<span asp-validation-for="LastName" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Password">Şifre:</label>
				<input asp-for="Password" class="from-control" />
				<span asp-validation-for="Password" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="GenderID">Cinsiyeti:</label>
				<select class="from-control" asp-for="GenderID" asp-items="@(new SelectList(ViewBag.GenderList,"Id","GenderName"))"></select>
				<span asp-validation-for="GenderID" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="DateOfBirth">Doğum Tarihi:</label>
				<input asp-for="DateOfBirth" class="from-control" />
				<span asp-validation-for="DateOfBirth" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Email">Email:</label>
				<input asp-for="Email" class="from-control" />
				<span asp-validation-for="Email" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Address">Adres:</label>
				<input asp-for="Address" class="from-control" />
				<span asp-validation-for="Address" class="text-danger"></span>
			</div>
			<div class="form-group">
				<input type="submit" value="Ekle" class="btn btn-primary" />
			</div>
		</form>
	</div>
</div>

